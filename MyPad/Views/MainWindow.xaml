                                    <DataTrigger Binding="{Binding SelectionLength}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Resources>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} chars ({1} lines) selected.">
                                <Binding Path="SelectionLength"/>
                                <Binding Path="SelectionLineCount"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StatusBarItem>
                <StatusBarItem Grid.Column="1" DataContext="{Binding ActiveContent}">
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Len {0} (View {1})">
                                <Binding Path="TextLength"/>
                                <Binding Path="VisualLength"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StatusBarItem>
                <StatusBarItem Grid.Column="2" DataContext="{Binding ActiveContent}">
                    <ToggleButton>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <ei:ChangePropertyAction TargetName="GoToLineFlyout" PropertyName="IsOpen" Value="True"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ToggleButton.Content>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Ln {0} - Col {1}">
                                        <Binding Path="Line"/>
                                        <Binding Path="Column"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </ToggleButton.Content>
                    </ToggleButton>
                </StatusBarItem>
