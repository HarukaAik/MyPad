                                </m:HamburgerMenuIconItem.Tag>
                            </m:HamburgerMenuIconItem>
                        </m:HamburgerMenuItemCollection>
                    </m:HamburgerMenu.ItemsSource>
                </m:HamburgerMenu>

                <GridSplitter Grid.Column="1" HorizontalAlignment="Center" Width="{qc:MultiBinding '$P0 ## double.IsNaN($P1) ? 10 : 0', P0={Binding Window.ShowSideBar, Source={x:Static models:SettingsService.Instance}, Mode=OneWay}, P1={Binding Width, ElementName=HamburgerMenu, Mode=OneWay}}"/>

                <components:DraggableTabControl x:Name="TabControl" Grid.Column="2" ItemsSource="{Binding Contents}" SelectedItem="{Binding ActiveContent}" NewItemFactory="{Binding ContentFactory}" ClosingItemCallback="{Binding ClosingContentHandler}">
                    <dr:TabablzControl.InterTabController>
