                                <m:HamburgerMenuIconItem.Tag>
                                    <Grid ge:GridEx.RowDefinition="Auto, *(50-), Auto, 100(50-)">
                                        <Grid ge:GridEx.ColumnDefinition="Auto, 5, Auto">
                                            <Grid.Resources>
                                                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource Default.Buton}">
