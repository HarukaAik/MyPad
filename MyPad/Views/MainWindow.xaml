                                <Style TargetType="{x:Type ScrollViewer}"/>
                            </Style.Resources>
                            <Setter Property="IsHeaderPanelVisible"
                                    Value="{qc:MultiBinding '$P0 || $P1.CompareTo(1) == 1 ? true : false',
