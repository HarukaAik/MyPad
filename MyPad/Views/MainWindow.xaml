                    <ComboBox x:Name="EncodingComboBox" ItemsSource="{x:Static root:Consts.ENCODINGS}" SelectedValue="{Binding Encoding, Mode=OneWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} - {1}">
                                            <Binding Path="CodePage"/>
                                            <Binding Path="EncodingName"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StatusBarItem>
                <StatusBarItem Grid.Column="4" DataContext="{Binding ActiveContent}">
                    <ComboBox x:Name="LanguageComboBox" ItemsSource="{Binding DataContext.Languages, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" SelectedValue="{Binding SyntaxDefinition.Name, Mode=OneWay}" m:TextBoxHelper.Watermark="Plain Text"/>
                </StatusBarItem>
                <StatusBarItem Grid.Column="5" DataContext="{Binding ActiveContent}">
                    <ToggleButton>
                        <ToggleButton.Style>
                            <Style TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource Common.StatusToggleButton}">
                                <Setter Property="IsChecked" Value="{Binding OverstrikeMode}"/>
                                <Setter Property="Content" Value="INS"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding OverstrikeMode}" Value="true">
                                        <Setter Property="Content" Value="OVER"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </StatusBarItem>
                <StatusBarItem Grid.Column="6">
                    <ResizeGrip/>
                </StatusBarItem>
            </StatusBar>
        </Grid>

        <!-- オーバーレイ -->
        <Border d:IsHidden="True" Style="{StaticResource Common.Overlay}" Visibility="{qc:Binding '$P ? Visibility.Visible : Visibility.Collapsed', P={Binding IsWorking}}">
            <Grid ge:GridEx.RowDefinition="Auto, 30, Auto">
                <TextBlock Text="{Binding Resources.Message_Working, Source={x:Static models:ResourceService.Instance}}"/>
                <m:ProgressRing Grid.Row="2"/>
            </Grid>
        </Border>
    </Grid>

